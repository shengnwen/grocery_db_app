<% layout( 'layout' ) -%>
 
<h1 id="page-title"><%= title %></h1>
<div id = "list">
  <form action="/create" method="post" accept-charset="utf-8">
    <div class="item-new">
      <input class="input" type="text" name="content" />
    </div>
  </form>
 
<% items.forEach( function ( item ){ %>
  <% if( items.names == current ){ %>
  <div class="item-new">
  <% }else{ %>
  <div class="item">
  <% } %>

    <% if( item.name == current ){ %>
    <form class="update-form" action="/update/<%= item.name %>" method="post" accept-charset="utf-8">
      <input class="update-input" type="text" name="content" value="<%= item.name %>" />
    </form>
    <% }else{ %>
    <a class="update-link" href="/edit/<%= item.name %>" title="Update this grocery item"><%= item.name %></a>
    <% } %>

    <% if( item.name == current ){ %>
    <a class="del-btn-edit" href="/destroy/<%= item.name %>" title="Delete this grocery item">Delete</a>
    <% }else{ %>
    <a class="del-btn" href="/destroy/<%= item.name %>" title="Delete this grocery item">Delete</a>
    <% } %>
  </div>
<% }); %>
</div>


